#include <iostream>
using namespace std;

int main() {
    int N;
    cin >> N;

    // Check constraints
    if (N < 0 || N >= 256) {
        cout << "Invalid";
        return 0;
    }

    int binary[8] = {0};   // Array to store 8 bits
    int index = 0;

    int number = N;

    // Repeated Division Method
    while (number > 0 && index < 8) {
        binary[index] = number % 2;  // Store remainder
        number = number / 2;         // Update quotient
        index++;
    }

    // Print in reverse order (8-bit format)
    for (int i = 7; i >= 0; i--) {
        cout << binary[i];
    }

    return 0;
}
